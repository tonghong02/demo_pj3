<!DOCTYPE>
<html>
<head>
	<title> NEW POST </title>

	<%- include ../layout/head  %>
	<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
  	 <script>tinymce.init({forced_root_block : "",selector:'textarea'});</script>

</head>
<body>

<div class="container">
	<%- include ../layout/nav  %>



   	<div class="panel panel-default">
      	<div class="panel-heading">
         Add new post
      	</div>


      	
      	<div class="panel-body">
         	<div class="row">
            	<div class="col-lg-6">

                     <div  style=" <%if(!data || !data.error) {%> display:none ; <%}%>" id="login-alert" class="alert alert-danger col-sm-12">
                           <p>Error:</p>


                           <%if (data && data.error) { %>
                           <span> <%= data.error %></span>

                           <% } %>
                     </div>

               		<form role="form" method="POST" action="/admin/post/new">
                  		<div class="form-group">
                     		<label>Title</label>
                     		<input class="form-control" name="title" placeholder="Add title...">
                  		</div>

                  		<div class="form-group">
                     		<label>Content</label>
                     		<textarea class="form-control" name="content" placeholder="Add content..."> </textarea>
                  		</div>

                  		<div class="form-group">
                     		<label>Author</label>
                     		<input class="form-control" name="author" placeholder="Add author...">
                  		</div>

                  		<input type="submit"  class="btn btn-primary" value="Add post">
                  		
               		</form>
               
            	</div>
         	</div>
      	</div>
   	</div>
</div>

	



</body>
</html>