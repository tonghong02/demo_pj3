                           <%if (data && data.error) { %>
                           <span> <%= data.error %></span>

                           <% } %>
                     </div>

               		<form role="form" method="" action="">
                     <input class="form-control id hidden " name="id" placeholder="Add title..." value="
                           <%if (data && data.post) { %>
                              <%= data.post.id %>
                           <% } %>
                           ">

                  		<div class="form-group">
                     		<label>Title</label>
                     		<input class="form-control title" name="title" placeholder="Add title..." value="
                           <%if (data && data.post) { %>
                              <%= data.post.title %>
                           <% } %>
                           ">
                  		</div>

                  		<div class="form-group">
                     		<label>Content</label>
                     		<textarea class="form-control content" name="content" placeholder="Add content..."> <%if (data && data.post) { %>
                              <%= data.post.content %>
                           <% } %> </textarea>
                  		</div>

                  		<div class="form-group">
                     		<label>Author</label>
                     		<input class="form-control author" name="author" placeholder="Add author..." value=" <%if (data && data.post) { %>
                              <%= data.post.author %>
                           <% } %>">
                  		</div>

                  		<input type="button"  class="btn btn-primary post-edit" value="Edit post">
                  		
               		</form>
               
            	</div>
         	</div>
      	</div>
   	</div>
</div>

